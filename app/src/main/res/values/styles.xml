<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="TituloPrincipal">

        <item name="android:textColor">@color/naranja</item>
        <item name="android:shadowColor">@color/negro</item>
        <item name="android:textSize">29sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowRadius">1.5</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="cajasformulario" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/negro</item>
        <item name="android:textColorHint">@color/gris</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>

    </style>

    <style name="cajasAdapter" >
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/negro</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>



</resources>
